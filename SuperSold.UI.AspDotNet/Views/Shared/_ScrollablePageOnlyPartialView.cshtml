@using System.Web;
@model ScrollableViewModel

@{
    ArgumentNullException.ThrowIfNull(Model);
    string pageId = Model.ScrollableId;
}

<style>
    #scrollContainer {
        padding:0px 12px 0px 12px;
    }
</style>

<div id="scrollContainer@(pageId)">

</div>

<div class="align-content-center" style="padding:5px">
    <button id="loadMoreBtn@(pageId)">Load More</button>
</div>

<script type="text/javascript">

    window.addEventListener("load", pLoadMore);
    document.getElementById("loadMoreBtn@(pageId)").onclick = pLoadMore;
    const scrollInfo@(pageId) = new ScrollableObjectInfo('@Model.Url', $("#scrollContainer@(pageId)"));

    function pLoadMore() {
        loadMorePageOnly(scrollInfo@(pageId));
    }

</script>