@using SuperSold.UI.AspDotNet.ViewRouting;
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - SuperSold.UI.AspDotNet</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/css/productRow.css" />
        <link rel="stylesheet" href="~/css/layout.css" />
        <script src="~/js/productLoad.js"></script>
        <script src="~/js/animations.js"></script>
        <script src="~/js/events.js"></script>
        <script src="~/js/jQuery.js"></script>
    </head>
    <body>
        <header>
            <nav class="border-bottom box-shadow">

                <!--Left Area-->
                <div class="nav-area">
                    <a class="nav-title" href="@Url.Home().Index()">SuperSold</a>
                    <a class="nav-header" href="@Url.Home().Index()">Home</a>
                    <a class="nav-header" href="@Url.Home().Privacy()">Privacy</a>
                    <a class="nav-header" href="@Url.Home().TermsAndConditions()">Terms Of Service</a>
                </div>

                <!--Right Area-->
                <div class="nav-area">
                    <select name="theme-select" class="theme-selector" onchange="changeTheme(this.value)">
                        <option value="dark">Dark</option>
                        <option value="light">Light</option>
                    </select>
                    <div class="mr-2">
                        @await Component.InvokeAsync("ProfileNavBar")
                    </div>
                </div>
            </nav>
        </header>

        <div class="container page-body">
            @await Html.PartialAsync("_NotifyUserPartialView")

            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2023 - SuperSold.UI.AspDotNet - <a href="@Url.Home().Privacy()">Privacy</a>
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/themes.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
