@model SuperSold.UI.AspDotNet.Models.Product

<head>
    <link rel="stylesheet" href="~/css/productRow.css"/>
</head>

<div class="container-row">

    <!--image-->
    <div class="image-row-container">
        <img class="image-row" src="@Html.DisplayFor(x => x.UserImgUrl)" alt="Product image"/>
    </div>

    <!--Description-->
    <div class="text-row">
        <h2 class="title">@Html.DisplayFor(x => x.Title)</h2>
        <p class="description">@Html.DisplayFor(x => x.Description)</p>
    </div>

    <!--Price & Edit Button-->
    <div class="price-buttons-container">

        <div class="price">
            <p><b>@Html.DisplayFor(x => x.Price)€</b></p>
        </div>

        <div class="buttons-container">

            <div class="buttons-align">
                @using(Html.BeginForm("MoveToCart", "Wishlist", new { productId = Model.Id }, FormMethod.Post)) {
                    <input type="submit" value="Move To Cart" class="btn btn-primary" />
                }
            </div>
            <div class="buttons-align">
                @using(Html.BeginForm("Remove", "Wishlist", new { productId = Model.Id }, FormMethod.Post)) {
                    <input type="submit" value="Remove" class="btn btn-primary" />
                }
            </div>

        </div>

    </div>

</div>