@model SuperSold.UI.AspDotNet.Models.LoginModel

@{
    Layout = "_Layout";
}

<div class="container border">
    <form asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="UserName" class="control-label"/>
            <input asp-for="UserName" class="form-control"/>
            <span asp-validation-for="UserName" class="text-danger"/>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label" />
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger" />
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="RememberMe"/> @Html.DisplayNameFor(x => x.RememberMe);
            </label>
        </div>

        @if(ViewBag.Message is not null) {
            <div class="border-round text-danger">
                @ViewBag.Message
            </div>
        }

        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-primary"/>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}